<div class="header__left">
  <button class="menu-toggle" {{action "toggleSideNav"}}>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
      <path fill="#fff" d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
    </svg>
  </button>
  <span>Movie Wagers</span>
</div>
<div class="header__right">
  <p class="header__metadata">
    <span class="header__date">{{dayOfTheWeek}}, {{day}} {{month}}</span>
    {{#if session.isAuthenticated}}
      | Logged in as
      <span class="t-name">{{session.currentUser.givenName}}</span>
    {{/if}}
  </p>
</div>
