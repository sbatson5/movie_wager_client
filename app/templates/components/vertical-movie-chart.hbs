<svg class="movie-chart" width="700" height="540" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
  <line x1="350" y1="0" x2="350" y2="700" stroke-width="10" stroke="#e4e6e7" />
  {{#each wagers as |wager index|}}
    {{vertical-chart/content-wrapper
      amount=wager.amount
      chartStartingPoint=chartStartingPoint
      chartRange=chartRange
      chartHeight=400
      index=index
      userImage=wager.user.profileImageUrl}}
  {{/each}}
</svg>
