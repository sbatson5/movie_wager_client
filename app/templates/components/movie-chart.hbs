{{#if notEnoughWagers}}
  {{yield}}
{{else}}
  <svg class="movie-chart" width="700" height="200" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    {{#each orderedWagerCollection as |wager|}}
      <line x1={{wager.startingPixelPoint}} y1="150" x2={{wager.endingPixelPoint}} y2="150"
        stroke-width="20" stroke={{wager.color}} class="horizontal-wager-line" />

      <line x1={{wager.amountPosition}} y1="150" x2={{wager.amountPosition}} y2="40"
        stroke-width="5" stroke={{wager.color}} class="vertical-wager-line" />

      <image xlink:href="{{wager.userImage}}" x={{wager.imagePosition}} y="40" height="48" width="48"/>
    {{/each}}
  </svg>
{{/if}}
